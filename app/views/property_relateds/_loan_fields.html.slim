

div.row.first-row
  div.col-xs-9
    div.row
      label.string.optional.control-label.col-xs-2
        = Loan.human_attribute_name("start_day")
      div.input-group.date.col-xs-3
        = f.input_field :start_day, as: :string, class: "single-datepicker form-control", disabled: cannot_edit
        span.input-group-addon
          span.glyphicon.glyphicon-calendar

      label.string.optional.control-label.col-xs-2.col-xs-offset-1
        = "è‡³"
      div.input-group.date.col-xs-3
        = f.input_field :end_day, as: :string, class: "single-datepicker form-control", disabled: cannot_edit
          span.input-group-addon
            span.glyphicon.glyphicon-calendar

    div.row.row-with-margin
      label.string.optional.control-label.col-xs-2
        = Loan.human_attribute_name("notary_type")
      div.col-xs-3
        = f.input_field :notary_type, :include_blank => false, disabled: cannot_edit

      label.string.optional.control-label.col-xs-2.col-xs-offset-1
        = Loan.human_attribute_name("description")
      div.col-xs-3
        = f.input_field :description, class: "form-control", disabled: cannot_edit


    div.row.row-with-margin
      label.string.optional.control-label.col-xs-2
        = Loan.human_attribute_name("amount")
      div.col-xs-3
        = f.input_field :amount, class: "form-control", disabled: cannot_edit

      label.string.optional.control-label.col-xs-2.col-xs-offset-1
        = Loan.human_attribute_name("repay_on_time")
      div.col-xs-3
        = f.input_field :repay_on_time, as: :radio_buttons, item_wrapper_class: "radio-inline", disabled: cannot_edit

  div.col-xs-3
    = image_tag "two-line-placeholder.png", class: "property-image"
