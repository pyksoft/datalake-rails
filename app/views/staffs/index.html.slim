div.staff_container
  div.staff_title
    p 员工列表管理
  div.staff-table-wrap
    table.table
      tr
        th = Staff.human_attribute_name("email")
        th = Staff.human_attribute_name("realname")
        th = Staff.human_attribute_name("role")
        th
        th

      - @staffs.each do |staff|
        tr
          td = staff.email
          td = staff.realname
          td = staff.role_text
          td = link_to t('action.edit'), edit_staff_path(staff),  class: "edit_button"
          td = link_to t('action.delete'), staff,  class: "delete_button", :data => {:confirm => t('action.confirm_delete')}, :method => :delete

    br

    = paginate @staffs

    = link_to (t('action.new') + Staff.model_name.human), new_staff_path
    = link_to "返回系统首页", root_path, class: "return_link"
