div.nested-fields
  - unless cannot_edit
    div.remove-link-div.clearfix
      = link_to_remove_association image_tag("close.png"), f, class: "remove-link pull-right"

  div.row.notary-row
    div.col-xs-9.row.notary-fields
      label.string.optional.control-label.col-xs-2 公证编号
      div.col-xs-3 class=('has-error' if f.object.errors.include?(:notary_id))
        = f.input_field :notary_id, class: "form-control", disabled: cannot_edit
        - if f.object.errors.include?(:notary_id)
            span class="help-block" #{f.object.errors.get(:notary_id)[-1]}

      label.string.optional.control-label.col-xs-2.col-xs-offset-1
        = NotaryRecord.human_attribute_name("notary_type")
      div.col-xs-3 class=('has-error' if f.object.errors.include?(:notary_type))
        = f.input_field :notary_type, class: "form-control", :include_blank => false, disabled: cannot_edit
        - if f.object.errors.include?(:notary_type)
          span class="help-block" #{f.object.errors.get(:notary_type)[-1]}

    div.col-xs-3
      a href="#{f.object.scan_file_url}" data-lightbox="#{f.object.scan_file_url}"
        = image_tag f.object.scan_file_url, class: "placeholder", width: 159, height: 170

  - unless cannot_edit
    div.row
      div.col-xs-offset-9.col-xs-3
        div.file-upload.page-button-link
          span 上传扫描件
          = f.file_field :scan_file, class: "form-control"

